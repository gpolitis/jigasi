  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.8</version>
        <configuration>
          <usedDependencies>
            <dependency>org.apache.felix:org.apache.felix.main</dependency>
            <dependency>org.jitsi:jitsi-systray-service</dependency>
            <dependency>org.jitsi:jitsi-sysactivity</dependency>

            <dependency>org.jitsi:jitsi-resourcemanager</dependency>
            <dependency>org.jitsi:jitsi-dns</dependency>
            <dependency>org.jitsi:jitsi-dnsservice</dependency>
            <dependency>org.slf4j:slf4j-jdk14</dependency>
            <dependency>org.gagravarr:vorbis-java-core</dependency>
            <dependency>org.jitsi:jitsi-packetlogging</dependency>
            <dependency>javax.servlet:javax.servlet-api</dependency>
            <dependency>org.jitsi:jitsi-netaddr</dependency>
            <dependency>org.jitsi:jitsi-configuration</dependency>
            <dependency>org.opentelecoms.sdp:java-sdp-nist-bridge</dependency>
            <dependency>org.jitsi:jitsi-notification-service</dependency>
            <dependency>org.jitsi:jitsi-desktoputil</dependency>
            <dependency>org.jitsi:jitsi-lgpl-dependencies</dependency>
            <dependency>org.slf4j:slf4j-api</dependency>
            <dependency>io.sentry:sentry</dependency>
            <dependency>org.igniterealtime.jbosh:jbosh</dependency>
            <dependency>org.jitsi:jitsi-fileaccess</dependency>
            <dependency>org.jitsi:jitsi-argdelegation</dependency>
            <dependency>org.jitsi:jitsi-credentialsstorage</dependency>
          </usedDependencies>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <compilerArgs>
            <arg>-Xlint:all</arg>
          </compilerArgs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>assembly-linux-x64-bin-archive</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptor>src/assembly/linux-x64-bin-archive.xml
              </descriptor>
              <finalName>
                ${project.artifactId}-linux-x64-${project.version}
              </finalName>
              <skipAssembly>${assembly.skipAssembly}
              </skipAssembly>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.19.1</version>
        <configuration>
          <includes>
            <include>**/*Test.*</include>
          </includes>
          <systemPropertyVariables>
            <java.util.logging.config.file>lib/logging.properties</java.util.logging.config.file>
          </systemPropertyVariables>
          <properties>
            <property>
              <name>listener</name>
              <value>org.jitsi.jigasi.PrintCurrentTestRunListener</value>
            </property>
          </properties>
        </configuration>
      </plugin>
      <plugin>
        <!-- Instructs the plugin to add the current package version in the jar manifest
        So we can access it runtime with: .class.getPackage().getImplementationVersion()
         -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>3.1.1</version>
        <configuration>
          <configLocation>checkstyle.xml</configLocation>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>jitsi-maven-repository-releases</id>
      <layout>default</layout>
      <name>Jitsi Maven Repository (Releases)</name>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <url>
        https://raw.github.com/jitsi/jitsi-maven-repository/master/releases/
      </url>
    </repository>
    <repository>
      <id>jitsi-maven-repository-snapshots</id>
      <layout>default</layout>
      <name>Jitsi Maven Repository (Snapshots)</name>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <url>
        https://raw.github.com/jitsi/jitsi-maven-repository/master/snapshots/
      </url>
    </repository>
  </repositories>
  <profiles>
    <profile>
      <id>coverage</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <version>0.8.6</version>
            <executions>
              <execution>
                <goals>
                  <goal>prepare-agent</goal>
                </goals>
              </execution>
              <!-- attached to Maven test phase -->
              <execution>
                <id>report</id>
                <phase>test</phase>
                <goals>
                  <goal>report</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
